{
  "name": "redenominasi-idr",
  "version": "1.0.1",
  "description": "Indonesian Rupiah redenomination library for conversion and formatting (1:1000 ratio). Framework-agnostic with wrappers for React, Vue, and Angular.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "react",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.esm.js",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:core && npm run build:react",
    "build:core": "rollup -c rollup.config.js",
    "build:react": "rollup -c rollup.config.react.js",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "redenomination",
    "rupiah",
    "idr",
    "currency",
    "formatter",
    "indonesia",
    "money",
    "conversion"
  ],
  "author": "Muhammad Seman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammad-seman/redenominasi-idr.git"
  },
  "bugs": {
    "url": "https://github.com/muhammad-seman/redenominasi-idr/issues"
  },
  "homepage": "https://github.com/muhammad-seman/redenominasi-idr#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.55",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
